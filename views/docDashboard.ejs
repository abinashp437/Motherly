  </div>
    <% if(patients.length>0) { %>
    <h1>PRE NATAL CARE PATIENTS</h1>
    <table>
        <tr>
            <th>Patient Name:</th>
            <th>Due Date:</th>
            <th>Next Visit:</th>
        </tr>
        <% for (var i=0;i<patients.length; i++) { %>
        <tr>
            <td>
                <%= patients[i].username %>
            </td>
            <td>
                <%= patients[i].duedate %>
            </td>
            <td>
                <%= patients[i].nextvisitdate %>
            </td>
        </tr>
        <% } %>
    </table>
    <% } %>
    <% if(deliveries.length>0) {%>
    <h1>POST NATAL CARE PATIENTS</h1>
    <table>
        <tr>
            <th>Patient Name:</th>
            <th>Delivery Date:</th>
            <th>Next Visit:</th>
        </tr>
        <% for (var i=0;i<deliveries.length; i++) { %>
        <tr>
            <td>
                <%= deliveries[i].username %>
            </td>
            <td>
                <%= deliveries[i].deliverydate %>
            </td>
            <td>
                <%= deliveries[i].nextvisitdate %>
            </td>
        </tr>
        <% } %>
    </table>
    <% } %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6">
              <!-- Trigger the modal with a button -->
              <button type="button" class="btn btn-default btn-lg" id="signUpBtn" onclick="myFunction2">Add New Patient</button>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header" style="padding:35px 50px;">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4><span class="glyphicon glyphicon-lock"></span> Sign Up </h4>
              </div>
              <div class="modal-body" style="padding:40px 50px;">
                  <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="username">User Name:</label>
                        <input name="username" type="text">
                    </div>
                    <div class="form-group">
                        <label for="userid">Email:</label>
                        <input name="userid" type="email">
                    </div>
                    <div class="form-group">
                        <label for="pass">Password:</label>
                        <input name="pass" type="password">
                    </div>
                    <div class="form-group">
                        <label for="passconf">Confirm Password:</label>
                        <input name="passconf" type="password">
                    </div>
                    <div class="form-group">
                        <label for="duedate">Due Date:</label>
                        <input name="duedate" type="date">
                    </div>
                    <div class="form-group">
                        <label for="nextvisit">Next Visit:</label>
                        <input name="nextvisit" type="date">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input name="phone" type="text" value="+91">
                    </div>
                    <button type="submit">Add Patient</button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
          </div>
      </div>

  </div>
</div>
<div class="col-lg-6">
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-default btn-lg" id="updateBtn" onclick="myFunction">Update Patient</button>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4><span class="glyphicon glyphicon-lock"></span> Update Patient </h4>
      </div>
      <div class="modal-body" style="padding:40px 50px;">
          <form action="/users/update" method="POST">
            <div class="form-group">
                <label for="logid">Email:</label>
                <input name="logid" type="email">
            </div>
            <div class="form-group">
                <label for="logpass">Password:</label>
                <input name="logpass" type="password">
            </div>
            <div class="form-group">
                <label for="upnextvisit">Next visit:</label>
                <input name="upnextvisit" type="date">
            </div>
            <div class="form-group">
                <label for="delivery">Delivery Complete:</label>
                <input name="delivery" type="radio" value="true">YES
                <input name="delivery" type="radio" value="false">NO<br>
            </div>
            <div class="form-group">
                <label for="deliverydate">Delivery Date:</label>
                <input name="deliverydate" type="date">
            </div>
            <button type="submit">Update Patient</button>
        </form>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
  </div>
</div>

</div>
</div>
</div>
</div>


<script>
    $(document).ready(function(){
      $("#updateBtn").click(function(){
        $("#myModal2").modal();
    });
      $("#signUpBtn").click(function(){
        $("#myModal").modal();
    });
  });
    function myFunction() {
      var x = document.getElementById("updateBtn");
      if (x.style.display === "none") {
        x.style.display = "block";
    } else {
        x.style.display = "none";
    }
}
function myFunction2() {
  var y = document.getElementById("signUpBtn");
  if (y.style.display === "none") {
    y.style.display = "block";
} else {
    y.style.display = "none";
}
}
</script>
</body>

</html>
