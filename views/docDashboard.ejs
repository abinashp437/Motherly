<body style="text-align: center">
  <div class="navbar navbar-default">
    <ul class="nav navbar-nav">
   <!-- <li> <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a></li> -->
   <li><a href="/">Home</a></li>
